#include <Arduino.h>
int voltaje=25;
int valor_pila=0;
int cargado=23;
int carga_media=22;
int descargado=4;
int activarCarga=2;
void setup() {
  // put your setup code here, to run once:
  Serial.begin(9600);
  pinMode(voltaje, INPUT);
  pinMode(cargado, OUTPUT);
  pinMode(carga_media, OUTPUT);
  pinMode(descargado, OUTPUT);
  pinMode(activarCarga, OUTPUT);

}

void loop() {
  valor_pila=analogRead(voltaje);
  Serial.println(valor_pila);
  delay(1000); // this speeds up the simulation
  if (valor_pila>2000)// los valores con los que se establece la condici√≥n pueden ser modificados a conveniencia 
{  
    digitalWrite(23, LOW);
    digitalWrite(22, LOW);
    digitalWrite(4, HIGH);
    delay(10);
  }
  if (valor_pila<2000 && valor_pila >1500){
    digitalWrite(23, LOW);
    digitalWrite(22, LOW);
    digitalWrite(4, HIGH);
    delay(10);
  }
  if (valor_pila<1000){
    digitalWrite(23, LOW);
    digitalWrite(22, LOW);
    digitalWrite(4, HIGH);
    delay(10);
  }
}
void loop1(){
    while(valor_pila<1000 && valor_pila<2000){
      digitalWrite(activarCarga,HIGH);
      delay(10);
  }
}
